{
  "name": "factorio-src-bot",
  "private": true,
  "scripts": {
    "clean": "rm -rf out/",
    "build": "npm run clean && tsc && npm run copy-to-dist",
    "watch": "tsc -w",
    "dev": "NODE_ENV=development node --watch out/main.js",
    "lint": "eslint && prettier --check .",
    "lint:fix": "eslint --fix && prettier --write .",
    "check": "npm run lint && tsc --noEmit",
    "copy-to-dist": "rm -rf dist/ && cp -r src/ dist/",
    "pm2:start": "pm2 startOrRestart ecosystem.config.cjs"
  },
  "type": "module",
  "dependencies": {
    "@sapphire/decorators": "^6.1.1",
    "@sapphire/framework": "^5.3.1",
    "@sapphire/plugin-subcommands": "^7.0.1",
    "@sapphire/utilities": "^3.18.1",
    "discord.js": "^14.16.3",
    "dotenv": "^16.4.7",
    "node-schedule": "^2.1.1",
    "pm2": "^5.4.3",
    "reflect-metadata": "^0.2.2",
    "sequelize": "^6.37.5",
    "sequelize-typescript": "^2.1.6",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@types/node-schedule": "^2.1.7",
    "eslint": "^9.16.0",
    "prettier": "^3.4.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.17.0"
  },
  "prettier": {
    "semi": false,
    "printWidth": 120
  }
}
